<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.newinstance.gucoach.mapper.StandingsMapper">
    <resultMap id="standingsResultMap" type="Standings">
        <result column="team_id" property="teamId"/>
        <result column="matches_won" property="matchesWon"/>
        <result column="matches_drawn" property="matchesDrawn"/>
        <result column="matches_lost" property="matchesLost"/>
        <result column="goals_for" property="goalsFor"/>
        <result column="goals_against" property="goalsAgainst"/>
        <result column="match_day" property="matchDay"/>
    </resultMap>
    <update id="createTableStandings">
        CREATE TABLE IF NOT EXISTS standings (
        id BIGINT PRIMARY KEY AUTO_INCREMENT,
        position TINYINT,
        team_id BIGINT,
        matches_won TINYINT,
        matches_drawn TINYINT,
        matches_lost TINYINT,
        goals_for TINYINT,
        goals_against TINYINT,
        match_day DATE,
        CONSTRAINT standings_team_day_unq UNIQUE (team_id, match_day)
        )
    </update>
    <delete id="deleteAllStandings">
        DELETE FROM standings
    </delete>
    <select id="findAllStandings" resultMap="standingsResultMap">
        SELECT * FROM standings
    </select>
    <insert id="insertStandings" parameterType="java.util.List" useGeneratedKeys="true">
        INSERT INTO standings (
        id,
        position,
        team_id,
        matches_won,
        matches_drawn,
        matches_lost,
        goals_for,
        goals_against,
        match_day
        )
        VALUES
        <foreach collection="list" item="standings" open="(" close=")" separator="),(">
            #{standings.id},
            #{standings.position},
            #{standings.teamId},
            #{standings.matchesWon},
            #{standings.matchesDrawn},
            #{standings.matchesLost},
            #{standings.goalsFor},
            #{standings.goalsAgainst},
            #{standings.matchDay}
        </foreach>
    </insert>
    <update id="updateStandings" parameterType="Standings">
        UPDATE standings SET
        position = #{position},
        team_id = #{teamId},
        matches_won = #{matchesWon},
        matches_drawn = #{matchesDrawn},
        matches_lost = #{matchesLost},
        goals_for = #{goalsFor},
        goals_against = #{goalsAgainst},
        match_day = #{matchDay}
        WHERE id = #{id}
    </update>
    <update id="dropTableStandings">
        DROP TABLE IF EXISTS standings
    </update>
</mapper>