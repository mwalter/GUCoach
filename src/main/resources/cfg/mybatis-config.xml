<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="Fixture" type="org.newinstance.gucoach.model.Fixture"/>
        <typeAlias alias="Player" type="org.newinstance.gucoach.model.Player"/>
        <typeAlias alias="PlayerStats" type="org.newinstance.gucoach.model.PlayerStats"/>
        <typeAlias alias="PlayerHistory" type="org.newinstance.gucoach.model.PlayerHistory"/>
        <typeAlias alias="StandingsHistory" type="org.newinstance.gucoach.model.StandingsHistory"/>
        <typeAlias alias="Team" type="org.newinstance.gucoach.model.Team"/>
    </typeAliases>

    <environments default="embedded">
        <environment id="embedded">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <!-- <property name="url" value="jdbc:h2:src/main/resources/gucoach"/> -->
                <property name="url" value="jdbc:h2:gucoach"/>
                <property name="username" value="sa"/>
                <property name="password" value=""/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="cfg/FixtureMapper.xml"/>
        <mapper resource="cfg/PlayerMapper.xml"/>
        <mapper resource="cfg/PlayerStatsMapper.xml"/>
        <mapper resource="cfg/PlayerHistoryMapper.xml"/>
        <mapper resource="cfg/StandingsHistoryMapper.xml"/>
        <mapper resource="cfg/TeamMapper.xml"/>
    </mappers>
</configuration>