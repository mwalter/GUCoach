<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" fx:controller="org.newinstance.gucoach.gui.controller.MainController" xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <menus>
                <Menu text="%menu.file">
                    <items>
                        <MenuItem text="%menu.file.importCsv" onAction="#handleMenuItemImportCsvAction"/>
                        <MenuItem text="%menu.file.exit" onAction="#handleMenuItemExitAction"/>
                    </items>
                </Menu>
                <Menu text="%menu.league">
                    <items>
                        <MenuItem text="%menu.league.create" onAction="#showCreateLeagueWindow"/>
                        <MenuItem text="%menu.league.edit"/>
                    </items>
                </Menu>
                <Menu text="%menu.statistics">
                </Menu>
                <Menu text="%menu.help">
                    <items>
                        <MenuItem text="%menu.help.about"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <StackPane>
            <children>
                <VBox fx:id="vBoxWelcomeMessage" spacing="5" style="-fx-padding: 10 10 10 10">
                    <children>
                        <Label text="%label.title.welcome" style="-fx-font: NORMAL 16 Tahoma;"/>
                        <Label text="%label.text.start"/>
                    </children>
                </VBox>
                <TabPane fx:id="tabPaneTabs" tabClosingPolicy="UNAVAILABLE">
                    <!-- tabs are added programmatically -->
                </TabPane>
            </children>
        </StackPane>
    </center>
    <bottom>
        <HBox spacing="5" style="-fx-padding: 10 0 0 10">
            <!-- add status information here -->
            <children/>
        </HBox>
    </bottom>
</BorderPane>