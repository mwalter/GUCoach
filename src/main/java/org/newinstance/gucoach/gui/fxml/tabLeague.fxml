<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.VBox?>

<Tab text="%tab.league" fx:controller="org.newinstance.gucoach.gui.controller.LeagueController" xmlns:fx="http://javafx.com/fxml">
    <content>
        <VBox spacing="5" style="-fx-padding: 10 0 0 10">
            <children>
                <Label text="%label.title.league" style="-fx-font: NORMAL 16 Tahoma;"/>
                <Button text="%button.createLeague" onAction="#showCreateLeagueWindow"/>
                <Button text="%button.editFixture" onAction="#editFixture"/>
            </children>
        </VBox>
    </content>
</Tab>